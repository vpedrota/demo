apiVersion: apps/v1
kind: Deployment
metadata:
name: demo
labels:
  app: demo
spec:
strategy:
  type: Recreate
template:
  metadata:
    labels:
      app: demo
      tier: demo
  spec:
    containers:
    - name: hello
      image: victorpedrota/demo:latest
      imagePullPolicy: Always
      ports:
      - containerPort: 5000
        name: hello

---
apiVersion: v1
kind: Service
metadata:
name: demo
labels:
  app: demo
spec:
ports:
  - port: 80
    targetPort: 80
selector:
  app: hello
  tier: hello
type: LoadBalancer
